load('ext://deployment', 'deployment_create')

docker_build('proxy', '.', dockerfile_contents="""
FROM openresty/openresty:alpine
COPY ./nginx.conf /usr/local/openresty/nginx/conf/nginx.conf
EXPOSE 80
""")

deployment_create('proxy', 'proxy', ports=['80:80'])

k8s_resource('proxy', labels=['dev'], port_forwards=['8082:80'], resource_deps=['conjur'])
